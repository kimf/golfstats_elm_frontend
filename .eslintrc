{
  "root": true,
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
  },
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
  },
  "rules": {
    "max-len": ['error', 100, 2, {
      "ignoreUrls": true,
      "ignoreComments": false,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
    }],
    "no-trailing-spaces": [1],
    "padded-blocks": [1],
    "arrow-parens": [2, "always"],
    "no-var": [2],
    "prefer-const": [2],
    "no-const-assign": [2],
    "no-unused-vars": [2],
    "no-console": [0],
    "object-curly-spacing": [2, "never"],
    "no-param-reassign": [0]
  }
}
